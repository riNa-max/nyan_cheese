<%= form_with model:@user, url: user_session_path do |f| %>
<div class="d-flex justify-content-center mt-5">
  <div class="card p-4" style="width: 320px;">
    <h4 class="text-center mb-4">ログイン</h4>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-3" %>

    <p class="text-center my-3">または</p>

    <%= link_to "LINEでログイン", user_line_omniauth_authorize_path, class: "btn btn-success btn-block" %>
  </div>
</div>
<% end %>

