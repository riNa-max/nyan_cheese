<div class="d-flex justify-content-center mt-5">
  <div class="card p-4" style="width: 420px;">
    <h4 class="text-center mb-4">アカウント情報</h4>

    <%= form_with model: resource,
                  url: registration_path(resource_name),
                  method: :put,
                  local: true do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>

      <hr>

      <p class="text-muted small mb-2">
        パスワードを変更しない場合は空欄のままでOK
      </p>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %>
        <%= f.password_field :password,
              class: "form-control",
              autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード確認" %>
        <%= f.password_field :password_confirmation,
              class: "form-control",
              autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "現在のパスワード（必須）" %>
        <%= f.password_field :current_password,
              class: "form-control",
              autocomplete: "current-password" %>
        <small class="form-text text-muted">
          変更を保存するために必要です
        </small>
      </div>

      <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
    <% end %>

    <hr>

    <div class="d-flex justify-content-between">
      <%= link_to "戻る", settings_path, class: "btn btn-outline-secondary" %>
      <%= link_to "退会する",
            registration_path(resource_name),
            method: :delete,
            data: { confirm: "本当に退会しますか？" },
            class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>